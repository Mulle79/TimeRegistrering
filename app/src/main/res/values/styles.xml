<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text styles -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:layout_margin">@dimen/spacing_medium</item>
    </style>
</resources>
